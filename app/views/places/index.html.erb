<% @posts.each do |place| %>
  <div class="booyah-box col-xs-10 offset-xs-1">
    <h1><%= place.name %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />
  </div>
<% end %>

<%= will_paginate @posts, :renderer =>WillPaginate::ActionView::BootstrapLinkRenderer %>